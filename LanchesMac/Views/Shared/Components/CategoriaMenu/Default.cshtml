@model IOrderedEnumerable<Categoria>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        Lanches
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        @foreach(var categoria in Model){
            <li><a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria="@(categoria.Nome)">@categoria.Nome</a></li>
        }
        <li class="dropdown-divider"></li>
        <li><a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria="">Todos os Lanches</a></li>
    </ul>
</div>