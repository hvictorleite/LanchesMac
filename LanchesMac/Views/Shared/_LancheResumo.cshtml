@model Lanche

<div class="col-sm-6 col-md-4 col-lg-2">
    <p><img src="@(Model.ImagemUrl)" alt="@(Model.Nome)" class="img-fluid" /></p>
    <h3><a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@(Model.LancheId)">@Model.Nome</a></h3>
    <h4>Preço: @Model.Preco.ToString("c")</h4>
    <p>@Model.DescricaoCurta</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
             asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@(Model.LancheId)">Incluir no Carrinho</a>
        </p>
    </div>
</div>