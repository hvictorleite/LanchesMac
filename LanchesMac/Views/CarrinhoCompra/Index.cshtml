@model CarrinhoCompraViewModel

<img />

<div class="container">
    <div class="row">
        <img src="~/images/Full-Cart-icon.png" style="width: 50px"/>
        <div><h4>Seu Carrinho de Compras: </h4></div>
        
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-left">@item.Lanche.Nome</td>
                        <td class="text-right">@item.Lanche.Preco.ToString("c")</td>
                        <td class="text-right">@((item.Lanche.Preco * item.Quantidade).ToString("c"))</td>
                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                               asp-route-lancheId="@(item.Lanche.LancheId)">
                                <link rel="icon" type="image/x-icon" href="~/images/remove.ico" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">@Model.CarrinhoCompraTotal.ToString("c")</td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group btn">
                <button class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</button>
                &nbsp;&nbsp;&nbsp;
                <button class="btn btn-primary" asp-controller="Lanche" asp-action="List">Continuar Comprando</button>
            </div>
        </div>
    </div>
</div>



